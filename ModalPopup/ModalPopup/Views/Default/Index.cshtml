@model IEnumerable<ModalPopup.EDM.Tblemployee>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<script>
    function addEmp()
    {
        $.ajax({
            url:"/Default/Create",
            success:function(data){
                $("#mybody").html(data);
                $("#myModal").modal('show');
            }
        });
    }
</script>

<h1>Index</h1>

<p>
    <button type="button" class="btn btn-info" onclick="addEmp()">Create New</button>   
</p>
