@model IEnumerable<ProjectDemoCore.EDM.Tblproduct>

    @{
        ViewData["Title"] = "ManageProducts";
        Layout = "~/Areas/Admin/Views/Admin_Layout.cshtml";
    }
    <div class="grids widget-shadow">
        <h2>ManageProducts</h2>

        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table">
            <thead>
